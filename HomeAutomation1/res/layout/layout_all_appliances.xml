<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/darkgrey"
    android:orientation="vertical" xmlns:app="http://schemas.android.com/apk/res/com.csc.ha">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="34dp"
        android:text="Appliances"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold|italic" />
    
  
 
   <ListView
       android:id="@+id/listViewFromDB"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_alignParentLeft="true"
       
       android:background="@color/darkgrey"
       android:headerDividersEnabled="true"
       android:layout_marginLeft="15dp"
       android:layout_marginRight="15dp"
       android:layout_marginTop="10dp"
       android:textColor="@color/white" 
       android:layout_below="@id/textView4"
       android:layout_marginBottom="20dp" 
       android:paddingBottom="50dp"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/add_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            fab:fab_colorNormal="@color/white"
            fab:fab_colorPressed="@color/white_pressed"
            fab:fab_title="Add Appliance" 
            app:fab_icon="@android:drawable/ic_input_add"/>
   
</RelativeLayout>
    


